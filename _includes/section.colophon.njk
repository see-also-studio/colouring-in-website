{% for item in collections.index %}
{% if item.data.type === 'colophon' %}
<section id="colophon" class="section">
  <h2 class="section__heading">{{ item.data.title }}</h2>
  {{ item.data.content | markdown | safe }}
  {% if item.data.images | length %}
      <ul class="image-grid">
        {% for image in item.data.images %}
        <li class="image-grid__item">
          {% if image.href %}<a href="{{ image.href }}" target="_blank" rel="noopener">{% endif %}
          <img alt="{{ image.alt }}"
            src="{{ image.src }}"
            loading="lazy">
            {% if image.href %}</a>{% endif %}
        </li>
        {% endfor %}
      </ul>
      {% endif %}
  {% include "partials/painting-canvas.njk" %}
</section>
{% endif %}
{% endfor %}
